@model RaceApp.Controllers.EventController.InputModel

<body>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Event.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Event.DiscountedCost)
            </th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>
                @Html.DisplayFor(model => model.Event.Name)
            </td>
            <td>
                @Html.DisplayFor(model => model.Event.DateTime)
            </td>
            <td>
                @Html.DisplayFor(model => model.Event.Cost)
            </td>
            <td>
                @Html.DisplayFor(model => model.Event.DiscountedCost)
            </td>
        </tr>
    </tbody>
</table>


<h3>Race Registration</h3>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Event" asp-action="Register" asp-route-id="@Model.Event.EventId" method="post">
            @if(Model.Cars.Count() == 0) 
            {
                <a asp-controller="Car" asp-action="Create"><h5>First, Add Enduro or Short Car to your account.</h5></a>
            }
            else 
            {
                <h5>Select Car to Register.</h5>
            }
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <select asp-for="CarId" asp-items="@Model.Cars">
            </select>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</body>